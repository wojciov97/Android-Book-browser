<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wprowadź tytuł"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/txtAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Wprowadź autora"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/txtPubHouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Wprowadź wydawnictwo"
        app:layout_constraintTop_toBottomOf="@+id/txtAuthor"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/txtPath1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Wprowadź ścieżkę"
        app:layout_constraintTop_toBottomOf="@+id/txtPubHouse"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnConfirmAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Dodaj książkę"
        app:layout_constraintTop_toBottomOf="@+id/txtPath1"
        tools:layout_editor_absoluteX="161dp" />


</android.support.constraint.ConstraintLayout>